<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.Opinions.MedicalOpinionActivity"
    tools:showIn="@layout/activity_medical_opinion">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/dp_10">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/medop_medical_btn"
                    android:background="@drawable/round_edge_white"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip">

                    <ImageView
                        android:layout_gravity="center|right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/medical_details_icon" />

                    <com.fdc.pixelcare.Views.CustomTextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/textPrimary"
                        android:gravity="center|left"
                        android:background="@android:color/transparent"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/medical_detail_head"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/medop_medical_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/down_arrow_circle" />
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:id="@+id/medop_medical_cardview"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:cardBackgroundColor="#ffeadff2"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="6dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">


                        <com.fdc.pixelcare.Views.CustomTextView
                            android:textColor="@color/textPrimary"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Patient Name *"
                            android:editable="false" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:background="@drawable/spinner_bg"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1">

                                <Spinner
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:id="@+id/medop_patname_spinner"
                                    android:background="@android:color/transparent"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:spinnerMode="dropdown" />

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@mipmap/drop"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true" />
                            </RelativeLayout>
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/medop_add_member"
                                android:paddingLeft="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/add_user_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/edittext_input_line_primary"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <com.fdc.pixelcare.Views.CustomTextView
                                android:textColor="@color/textPrimary"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="Gender *"
                                android:editable="false" />

                            <RadioGroup
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/medop_radioGroupGender"
                                android:paddingLeft="@dimen/dp_10"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/textPrimary"
                                    android:id="@+id/medop_radioMale"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Male"
                                    android:layout_weight="1" />

                                <RadioButton
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/textPrimary"
                                    android:id="@+id/medop_radioFemale"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Female"
                                    android:layout_weight="1" />

                                <RadioButton
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/textPrimary"
                                    android:id="@id/medop_radioTrans"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Others"
                                    android:layout_weight="1" />
                            </RadioGroup>
                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_age_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_age"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="Age *"
                                android:singleLine="true"
                                android:inputType="textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_weight_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_weight"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="Weight *"
                                android:singleLine="true"
                                android:inputType="textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/edittext_input_line_primary"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomTextView
                                android:textColor="@color/textPrimary"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:text="Hypertension *"
                                android:editable="false"
                                android:layout_weight="1" />
                            <RadioGroup
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/medop_radioGroupHyper"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">

                                <RadioButton
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/textPrimary"
                                    android:id="@+id/medop_radiohyperYes"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Yes"
                                    android:layout_weight="1" />

                                <RadioButton
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/textPrimary"
                                    android:id="@+id/medop_radiohyperNo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="No"
                                    android:layout_weight="1" />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/edittext_input_line_primary"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomTextView
                                android:textColor="@color/textPrimary"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:text="Diabetes *"
                                android:editable="false"
                                android:layout_weight="1" />
                            <RadioGroup
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/medop_radioGroupDiabetes"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">

                                <RadioButton
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/textPrimary"
                                   android:id="@+id/medop_radiodianetesYes"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Yes"
                                    android:layout_weight="1" />

                                <RadioButton
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/textPrimary"
                                    android:id="@+id/medop_radiodiabetesNo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="No"
                                    android:layout_weight="1" />
                            </RadioGroup>
                        </LinearLayout>

                        <com.fdc.pixelcare.Views.CustomTextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/textPrimary"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:text="Specialty *"
                            android:editable="false" />

                        <RelativeLayout
                            android:orientation="horizontal"
                            android:background="@drawable/spinner_bg"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3.0dip">
                            <Spinner
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/medop_spec_spinner"
                                android:background="@android:color/transparent"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:spinnerMode="dropdown" />

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@mipmap/drop"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/medop_contact_btn"
                    android:background="@drawable/round_edge_white"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_gravity="center|right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/contact_details_icon" />

                    <com.fdc.pixelcare.Views.CustomTextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/textPrimary"
                        android:gravity="center|left"
                        android:background="@android:color/transparent"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_detail_head"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/medop_contact_img"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:src="@mipmap/down_arrow_circle" />
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:id="@+id/medop_contact_cardview"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:cardBackgroundColor="#ffeadff2"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="4.0dip"
                    app:cardMaxElevation="6.0dip">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_contact_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_contact"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/contact_person"
                                android:singleLine="true"
                                android:inputType="textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_mobile_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_mobile"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/mobile_num"
                                android:singleLine="true"
                                android:maxLength="10"
                                android:inputType="phone|textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_email_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_email"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/email"
                                android:singleLine="true"
                                android:inputType="textEmailAddress|textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_address_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_address"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="Address *"
                                android:singleLine="true"
                                android:inputType="textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_pincode_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_pincode"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="Pincode *"
                                android:singleLine="true"
                                android:maxLength="6"
                                android:inputType="phone|textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_city_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_city"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="City *"
                                android:singleLine="true"
                                android:inputType="textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_state_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_state"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="State *"
                                android:singleLine="true"
                                android:inputType="textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_country_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_country"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="Country *"
                                android:singleLine="true"
                                android:inputType="textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/medop_detaildesc_btn"
                    android:background="@drawable/round_edge_white"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_gravity="center|right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/medical_details_icon" />

                    <com.fdc.pixelcare.Views.CustomTextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/textPrimary"
                        android:gravity="center|left"
                        android:background="@android:color/transparent"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_desc_head"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/medop_detaildesc_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/down_arrow_circle" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/medop_detaildesc_cardview"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:cardBackgroundColor="#ffeadff2"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="6dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_medcomplaint_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_medcomplaint"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="Medical Complaints"
                                android:singleLine="false"
                                android:inputType="textMultiLine|textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_meddesc_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_medmeddesc"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="Medical Description"
                                android:singleLine="false"
                                android:inputType="textMultiLine|textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="@color/textPrimary"
                            android:id="@+id/medop_query_TL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">
                            <com.fdc.pixelcare.Views.CustomEditText
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/textPrimary"
                                android:id="@+id/medop_query"
                                android:background="@drawable/edittext_input_line_primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="Query to doctor"
                                android:singleLine="false"
                                android:inputType="textMultiLine|textNoSuggestions" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                   android:id="@+id/medop_reports_btn"
                    android:background="@drawable/round_edge_white"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_gravity="center|right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/medical_details_icon" />

                    <com.fdc.pixelcare.Views.CustomTextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/textPrimary"
                        android:gravity="center|left"
                        android:background="@android:color/transparent"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/reports_detail_head"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/medop_reports_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/down_arrow_circle" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/medop_reports_cardview"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:cardBackgroundColor="#ffeadff2"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="6dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/medop_reports_upload"
                            android:background="@drawable/round_edge_white"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <com.fdc.pixelcare.Views.CustomTextView
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/textPrimary"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Attach Reports"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/upload_icon_primary" />
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/medop_reports_recyclerview"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <com.fdc.pixelcare.Views.CustomTextViewBold
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:id="@+id/medop_submit"
                    android:background="@drawable/round_edge_primary"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:text="SUBMIT OPINION" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
