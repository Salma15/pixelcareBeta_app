<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.Home.HospitalListsActivity"
    tools:showIn="@layout/activity_map_hosplist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal">
            <com.fdc.pixelcare.Views.CustomTextViewItalicBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/current_location"
                android:layout_weight="1"
                android:text="Current Location"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/sp_14"/>

            <com.fdc.pixelcare.Views.CustomTextViewItalicBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/current_specialty"
                android:layout_weight="1"
                android:text="Specialty"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/hosplist_listview"
            android:scrollbars="none"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp" />

        <com.fdc.pixelcare.Views.CustomTextViewItalicBold
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/hosplist_empty"
            android:text="No hospital records found !!!"
            android:textSize="@dimen/sp_20"
            android:gravity="center"
            android:textColor="@color/textPrimary"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/hosplist_progressbar">

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/skeletonView1"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                app:baseColor="#fffbfbfb"
                app:deepColor="#fff2f2f2"
                app:duration="1500"
                app:interval="1000"
                app:progressLength="120dp"
                app:radius="42dp"/>

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="210dp"
                android:layout_height="8dp"
                android:id="@+id/skeletonView2"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="18dp"
                app:baseColor="#fffbfbfb"
                app:deepColor="#fff2f2f2"
                app:duration="1500"
                app:interval="1000"
                app:progressLength="120dp"
                app:radius="5dp"/>

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="100dp"
                android:layout_height="12dp"
                android:id="@+id/skeletonView3"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="34dp"
                app:baseColor="#fffbfbfb"
                app:deepColor="#fff2f2f2"
                app:duration="1500"
                app:interval="1000"
                app:progressLength="120dp"
                app:radius="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff2f2f2"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
