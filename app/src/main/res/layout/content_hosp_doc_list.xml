<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.Home.HospitalDoctorsActivity"
    tools:showIn="@layout/activity_hosp_doc_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/hosp_doclist_listview"
            android:scrollbars="none"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp" />

        <com.fdc.pixelcare.Views.CustomTextViewItalicBold
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/hosp_doclist_empty"
            android:visibility="gone"
            android:text="No doctor records found !!!"
            android:textSize="@dimen/sp_20"
            android:gravity="center"
            android:textColor="@color/textPrimary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/hosp_doclist_progressbar">

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/skeletonView1"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                app:baseColor="@color/gray1"
                app:deepColor="#fff2f2f2"
                app:duration="1500"
                app:interval="1000"
                app:progressLength="120dp"
                app:radius="42dp"/>

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="210dp"
                android:layout_height="8dp"
                android:id="@+id/skeletonView2"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="18dp"
                app:baseColor="@color/light_gray1"
                app:deepColor="#fff2f2f2"
                app:duration="1500"
                app:interval="1000"
                app:progressLength="120dp"
                app:radius="5dp"/>

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="100dp"
                android:layout_height="12dp"
                android:id="@+id/skeletonView3"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="34dp"
                app:baseColor="@color/light_gray1"
                app:deepColor="#fff2f2f2"
                app:duration="1500"
                app:interval="1000"
                app:progressLength="120dp"
                app:radius="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff2f2f2"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
