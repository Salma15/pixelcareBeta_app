<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/presc_list_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:id="@+id/presc_danger_image"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/cancel_icon"/>

            <com.fdc.pixelcare.Views.CustomTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/presc_trade_name"
                android:gravity="left|center_vertical"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="1dp"
                android:maxLines="4"
                android:textColor="@color/textPrimary"
                android:hint="Trade Name"/>

        </LinearLayout>

        <com.fdc.pixelcare.Views.CustomTextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="@color/status_red"/>

        <com.fdc.pixelcare.Views.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/presc_gen_name"
            android:gravity="center|center_vertical"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:maxLines="3"
            android:textColor="@color/textPrimary"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:hint="Generic"/>

        <com.fdc.pixelcare.Views.CustomTextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="@color/status_red"/>

        <com.fdc.pixelcare.Views.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/presc_dosage"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:maxLines="3"
            android:textColor="@color/textPrimary"
            android:layout_marginRight="1dp"
            android:layout_gravity="center"
            android:hint="Dosage"/>


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/presc_list_delete"
            android:layout_gravity="center"
            android:src="@mipmap/cancel_icon"/>

    </LinearLayout>

</LinearLayout>
