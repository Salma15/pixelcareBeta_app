<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/map_list_cardview"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_2"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/map_list_image"
                    android:src="@drawable/ic_no_user"/>

                <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/map_list_image"
                    android:layout_alignParentTop="true">

                    <com.fdc.pixelcare.Views.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/textPrimary"
                        android:id="@+id/map_list_name"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="Doctor Name" />

                    <ImageView
                        android:id="@+id/map_list_star"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/star_gold" />

                </LinearLayout>

                <com.fdc.pixelcare.Views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/textPrimary"
                    android:id="@+id/map_list_spec"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="Specialization"
                    android:layout_toRightOf="@+id/map_list_image"
                    android:layout_below="@+id/name_layout"
                    android:layout_alignLeft="@+id/name_layout"/>

                <com.fdc.pixelcare.Views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/textPrimary"
                    android:id="@+id/map_list_city"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="City"
                    android:layout_toRightOf="@+id/map_list_image"
                    android:layout_below="@+id/map_list_spec"
                    android:layout_alignLeft="@+id/map_list_spec"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edge_gray"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:id="@+id/map_list_appointment">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/appointment_icon"/>

                    <com.fdc.pixelcare.Views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="Appointment"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edge_gray"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:id="@+id/map_list_opinion">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/opinion_icon"/>

                    <com.fdc.pixelcare.Views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="Opinion"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/round_edge_gray"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:id="@+id/map_list_share"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/share_icon"/>

                    <com.fdc.pixelcare.Views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="Share"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
